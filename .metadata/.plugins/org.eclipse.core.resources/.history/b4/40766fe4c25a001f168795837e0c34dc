package com.wipro.flightms.repository;

import java.time.LocalDate;
import java.time.LocalTime;
import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import com.wipro.flightms.entity.Flights;

@Repository
public interface FlightRepository extends JpaRepository<Flights, Long>{

	List<Flights> findBySourceIdAndDestinationIdAndTravelDate(Long sourceId, Long destinationId, LocalDate travelDate);

	List<Flights> findByStopOverAndAircraftNameAndPriceBetweenAndDepartureTimeBetween(String stopOver,
			String flightName, Object object, Object object2, LocalTime morningStartTime, LocalTime eveningEndTime);

}
